<!doctype html>
<html
  dir="<%= params[:lookbook][:display][:lang] == 'ar' ? 'rtl' : "ltr" %>"
  lang="<%= params[:lookbook][:display][:lang] || "en" %>"
  class="<%= params[:lookbook][:display][:html_class] %>"
>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <title>Component Preview</title>
  </head>

  <body class="<%= params[:lookbook][:display][:body_class] %>">
    <% if params[:lookbook][:display][:wrapper] != false %>
      <div style="
        padding: <%= params[:lookbook][:display][:page_padding] || "20px" %>;
        margin-left: auto;
        margin-right: auto;
        max-width: <%= params[:lookbook][:display][:max_width] || "100%" %>
      ">
        <%= yield %> <!-- rendered preview will be injected here -->
      </div>
    <% else %>
      <%= yield %> <!-- rendered preview will be injected here -->
    <% end %>
  </body>

</html>
