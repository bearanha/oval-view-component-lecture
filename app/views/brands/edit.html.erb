<div class="h-full flex flex-col items-end justify-between">
  <div class="flex flex-col space-y-14 w-full">
    <div class="flex flex-col space-y-8 w-1/2">
      <%= render InputComponent.new(label_text: 'Unique Name', id: 'unique-name', value: 'Olga Ri') %>
      <%= render InputComponent.new(label_text: 'Exhibition Name', id: 'exhibition-name', value: 'Olga Ri') %>
      <%= render InputComponent.new(label_text: 'Color', id: 'color', value: '#F9CA07') %>
      <select name="test" id="test"></select>
    </div>

    <hr class="bg-gray-200">

    <div class="flex flex-col space-y-6">
      <div class="flex items-center space-x-1">
        <p class="font-semibold">Active</p>
        <span class="cursor-help"><%= icon('info') %></span>
      </div>
      <label for="active" class="flex items-center cursor-pointer">
        <div class="relative">
          <input type="checkbox" id="active" class="sr-only peer">
          <div class="block bg-gray-300 peer-checked:bg-primary-700 w-10 h-[21px] rounded-full"></div>
          <div class="dot absolute left-1 top-[2px] bg-white w-4 h-4 rounded-full transition peer-checked:translate-x-full"></div>
        </div>
      </label>
    </div>
  </div>
  <div class="flex space-x-4">
    <button class="btn-secondary">Cancelar</button>
    <button class="btn-primary">Continuar</button>
  </div>
</div>
