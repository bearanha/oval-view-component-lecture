<div class="flex flex-col space-y-2 text-sm">
  <% if @label_text != '' %>
    <div class="flex items-center space-x-1">
      <label for="<%= @id %>" class="font-medium text-sm"><%= @label_text %></label>
      <span class="cursor-help"><%= helpers.icon('info') %></span>
    </div>
  <% end %>
  <input id="<%= @id %>" class="input" type="text" value="<%= @value %>">
</div>
