<div class="flex flex-col space-y-4">
  <h3 class="uppercase text-gray-500 text-sm font-medium"><%= @heading %></h3>
  <div class="flex flex-col space-y-2">
    <% @items.each do |item| %>
      <%= render SidebarItemComponent.new(text: item[:text], icon: item[:icon], path: item[:path]) %>
    <% end %>
  </div>
</div>
<% if @with_divider %>
  <hr>
<% end %>
